<div class="main-chat-top">
  <div class="left-header">
    <div class="main-chat-name">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="chat-close">
      <%= link_to("チャットを終了する", room_path(@room), data: { turbo_method: :delete }) %>
    </div>
  </div>
</div>
<div class="main-chat-middle">
  <%= render partial: "message", collection: @messages %>
</div>
<div class="main-chat-bottom">
    <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
      <div class="form-input">
        <%= f.text_field :content, class: 'text', placeholder: 'type a message' %>
        <label class="form-image">
          <span class="image-file">画像</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
      </div>
      <%= f.submit '送信', class: 'submit' %>
     <% end %>
</div>


